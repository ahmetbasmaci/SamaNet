{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=chat_database.db"
  },
  "AllowedHosts": "*",
  "FileUpload": {
    "MaxFileSizeInMB": 200,
    "AllowedImageTypes": [ "image/jpeg", "image/png", "image/gif", "image/webp" ],
    "AllowedVideoTypes": [ "video/mp4", "video/avi", "video/mov", "video/wmv" ],
    "AllowedAudioTypes": [ "audio/mpeg", "audio/wav", "audio/ogg", "audio/mp3" ],
    "AllowedFileTypes": [ "application/pdf", "application/doc", "application/docx", "text/plain" ],
    "UploadPath": "uploads"
  },
  "Chat": {
    "MaxMessageLength": 5000,
    "MaxConversationPageSize": 100,
    "DefaultPageSize": 50
  },
  "BandwidthLimiter": {
    "Enabled": true,
    "MaxUploadSpeedKBps": 51200,
    "MaxDownloadSpeedKBps": 51200,
    "TargetPaths": [ "/api/files/" ]
  }
}
